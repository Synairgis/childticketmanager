{% extends "pages/setup/general/base_form.html.twig" %}
{% import "components/form/fields_macros.html.twig" as fields %}

{% set field_options = {
    'full_width': true,
} %}

{% block config_fields %}

{{ fields.largeTitle(__('Child Tickets Manager', 'childticketmanager'), 'fa fa-link', true) }}
{{ fields.hiddenField('config_context', config_context, '', {'no_label': true}) }}
<div class="row ps-4">
    {{ fields.dropdownYesNo('childticketmanager_close_child', current_config['childticketmanager_close_child'] ?? false, __("Close child tickets when parent is closed", 'childticketmanager'), field_options) }}
    {{ fields.dropdownYesNo('childticketmanager_resolve_child', current_config['childticketmanager_resolve_child'] ?? false, __("Solve child tickets when parent is solved", 'childticketmanager'), field_options) }}
    {{ fields.dropdownYesNo('childticketmanager_display_tmpl_link', current_config['childticketmanager_display_tmpl_link'] ?? false, __("Show link to template", 'childticketmanager'), field_options) }}
</div>

{% endblock %}